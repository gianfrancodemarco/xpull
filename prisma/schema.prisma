// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  output        = "../generated/prisma"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  // NOTE: When using mysql or sqlserver, uncomment the @db.Text annotations in model Account below
  // Further reading:
  // https://next-auth.js.org/adapters/prisma#create-the-prisma-schema
  // https://www.prisma.io/docs/reference/api-reference/prisma-schema-reference#string
  url      = env("DATABASE_URL")
}

model Post {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  createdBy   User   @relation(fields: [createdById], references: [id])
  createdById String

  @@index([name])
}

// Necessary for Next auth
model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String? // @db.Text
  access_token             String? // @db.Text
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String? // @db.Text
  session_state            String?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  refresh_token_expires_in Int?

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id              String           @id @default(cuid())
  name            String?
  email           String?          @unique
  emailVerified   DateTime?
  image           String?
  accounts        Account[]
  sessions        Session[]
  posts           Post[]
  repoPreferences RepoPreference[]
  importJobs      ImportJob[]
  repositories    Repository[]
  gitEvents       GitEvent[]
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Repository preferences persisted per-user. Each (userId, repoName) is unique.
model RepoPreference {
  id        Int      @id @default(autoincrement())
  userId    String
  repoName  String
  fullName  String
  allowed   Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, repoName])
  @@index([userId])
}

enum ImportJobStatus {
  pending
  in_progress
  completed
  failed
}

enum GitEventType {
  commit
  pull_request
  review
}

model ImportJob {
  id             String          @id @default(cuid())
  userId         String          @map("user_id")
  status         ImportJobStatus @default(pending)
  progress       Int             @default(0)
  totalItems     Int?            @map("total_items")
  processedItems Int             @default(0) @map("processed_items")
  errorMessage   String?         @map("error_message")
  errorDetails   Json?           @map("error_details")
  startedAt      DateTime?       @map("started_at")
  completedAt    DateTime?       @map("completed_at")
  createdAt      DateTime        @default(now()) @map("created_at")
  updatedAt      DateTime        @updatedAt @map("updated_at")

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  gitEvents GitEvent[]

  @@index([userId], name: "idx_import_jobs_user_id")
  @@map("import_jobs")
}

model Repository {
  id              String    @id @default(cuid())
  userId          String    @map("user_id")
  externalId      String    @map("external_id")
  ownerLogin      String    @map("owner_login")
  isPrivate       Boolean   @map("is_private")
  defaultBranch   String?   @map("default_branch")
  primaryLanguage String?   @map("primary_language")
  lastSyncedAt    DateTime? @map("last_synced_at")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  gitEvents GitEvent[]

  @@unique([userId, externalId], name: "uq_repositories_user_id_external_id")
  @@index([userId], name: "idx_repositories_user_id")
  @@map("repositories")
}

model GitEvent {
  id           String       @id @default(cuid())
  userId       String       @map("user_id")
  repositoryId String       @map("repository_id")
  importJobId  String?      @map("import_job_id")
  externalId   String       @map("external_id")
  eventType    GitEventType @map("event_type")
  occurredAt   DateTime     @map("occurred_at")
  linesAdded   Int          @map("lines_added")
  linesRemoved Int          @map("lines_removed")
  filesChanged Int          @map("files_changed")
  languages    Json
  metadata     Json
  createdAt    DateTime     @default(now()) @map("created_at")

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  repository Repository @relation(fields: [repositoryId], references: [id], onDelete: Cascade)
  importJob  ImportJob? @relation(fields: [importJobId], references: [id], onDelete: SetNull)

  @@unique([userId, externalId], name: "uq_git_events_user_id_external_id")
  @@index([userId, occurredAt], name: "idx_git_events_user_id_occurred_at")
  @@map("git_events")
}
